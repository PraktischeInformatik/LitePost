#parse("header.vm")
<div id="wrapper">
  <div id="main">
    #if($Validation)
      #if($Input.error("validCsrfToken"))
        <p>CsrfToken not valid</p>
      #end
      #if($Input.error("validServerPort"))
        <p>ServerPort not valid</p>
      #end
      #if($Input.error("validMailSystemaddress"))
        <p>MailSystemaddress not valid</p>
      #end
      #if($Input.error("hasPublicFolder"))
        <p>has no PublicFolder</p>
      #end
      #if($Input.error("hasUploadFolder"))
        <p>has no UploadFolder</p>
      #end
      #if($Input.error("SSLNeedsUsernameAndPassword"))
        <p>SSL Needs Username And Password</p>
      #end
      #if($Input.error("hasMailHost"))
        <p>has no MailHost</p>
      #end
      #if($Input.error("hasMailPort"))
        <p>has no MailPort</p>
      #end
    #end
    $Form.begin("POST", ${Router.linkTo("setupPost")})
        <h2>Einrichtung</h2>
        <label>
          <div>Email Servername</div>
          $Input.text.name("mailhost").prepopulate()
        </label>
        <label>
          <div>Email Port</div>
          $Input.text.name("mailport").prepopulate()
        </label>
        <label>
          <div>Email Nutzername</div>
          $Input.text.name("mailusername").prepopulate()
        </label>
        <label>
          <div>Email Password</div>
          $Input.text.name("mailpassword")
        </label>
        <label>
          $Input.checkbox.name("usessl").prepopulate()
          <div>SSL verwenden</div>
        </label>
        <label>
          <div>System Email Addresse</div>
          $Input.text.name("systemmail").prepopulate()
        </label>
        $Input.csrfToken
        $Input.submit.general.value("Weiter")
    $Form.end()
  </div>
  #parse("sidebar.vm")
</div>
#parse("footer.vm")
