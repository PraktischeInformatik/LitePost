#parse("header.vm")
<div id="wrapper">
  <div id="main">
    #if($Input.error("validCsrfToken"))
      <p>CsrfToken not valid</p>
    #end
    #if($Input.error("validServerPort"))
      <p>ServerPort not valid</p>
    #end
    #if($Input.error("validMailSystemaddress"))
      <p>MailSystemaddress not valid</p>
    #end
    #if($Input.error("hasPublicFolder"))
      <p>has no PublicFolder</p>
    #end
    #if($Input.error("hasUploadFolder"))
      <p>has no UploadFolder</p>
    #end
    #if($Input.error("SSLNeedsUsernameAndPassword"))
      <p>SSL Needs Username And Password</p>
    #end
    #if($Input.error("hasMailHost"))
      <p>has no MailHost</p>
    #end
    #if($Input.error("hasMailPort"))
      <p>has no MailPort</p>
    #end
    $Form.begin("POST", $Router.linkTo("setupPost"))
      <h2>Einrichtung</h2>
      $Input.text.name(serverhost).value("Host").prepopulate()
      $Input.text.name(serverport).value("Port").prepopulate()
      $Input.text.name(uploadfolder).value("Ordner für hochgeladene Dateien").prepopulate()
      <h2>Email Einstellungen</h2>
      $Input.text.name(mailhost).value("Mail Host").prepopulate()
      $Input.text.name(mailport).value("Mail Port").prepopulate()
      $Input.text.name(mailusername).value("Mail Benutzername").prepopulate()
      $Input.password.name(mailpassword).value("Mail Passwort").prepopulate()
      <label>
        $Input.checkbox.name(usessl).prepopulate()
        <div>SSL verwenden</div>
      </label>
      $Input.text.name(systemmail).value("Email addresse für Systemnachrichten").prepopulate()
      $Input.csrfToken
      $Input.submit.general.value("Weiter")
    $Form.end()
  </div>
  #parse("sidebar.vm")
</div>
#parse("footer.vm")
