#parse("header.vm")
<div id="wrapper">
  <div id="main">
    <div id="reset-container">
      <form method="POST" action="${Router.linkTo("resetPasswordPost", $resetToken)}" id="reset-form">
        <h2>Passwort zurücksetzen</h2>
        <input type="password" name="password" placeholder="Neues Passwort">
        <input type="password" name="pwconfirm" placeholder="Passwort wiederholen">
        $Resources.csrfToken()
        <button type="submit" class="general">Zurücksetzen</button>
      </form>
    </div>
  </div>
  #parse("sidebar.vm")
</div>
#parse("footer.vm")
