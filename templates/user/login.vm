#parse("header.vm")
<div id="wrapper">
  <div id="main">
    <div id="login-container">
      #if($loginFailed)
		<p>Login Failed</p>
	  #end
      <form method="POST" action="${Router.linkTo("loginPost")}" id="login-form">
        <h2>Login</h2>
        <input id="login-username" type="text" name="username" placeholder="Nutzername">
        <input id="login-password" type="password" name="password" placeholder="Passwort">
        <input id="login-remember" type="checkbox" name="remember">
   	  <button type="submit" class="general">Login</button>
   	  <button class="general" id="register">Registrieren</button>
      </form>
    </div>
  </div>
  #parse("sidebar.vm")
</div>
#parse("footer.vm")
