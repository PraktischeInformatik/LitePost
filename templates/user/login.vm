#parse("header.vm")
<div id="wrapper">
  <div id="main">
    <div id="login-container">
      #if($Input.error("csrfTokenValid"))
        <p>csrfToken not Valid</p>
      #end
      #if($Input.error("hasUsername"))
        <p>has no Username</p>
      #end
      #if($Input.error("hasPassword"))
        <p>has no Password</p>
      #end
      #if($Input.error("emailVerified"))
        <p>email not Verified</p>
      #end
      #if($Input.error("loginSuccessful"))
        <p>login unsuccessful</p>
      #end
      $Form.begin("POST", ${Router.linkTo("loginPost")})
        <h2>Login</h2>
        $Input.text.name("username").placeholder("Nutzername").prepopulate()
        $Input.password.name("password").placeholder("Passwort")
        <label>
          $Input.checkbox.name("remember").prepopulate()
          <div>An mich Erinnern</div>
        </label>
        $Input.csrfToken
        $Input.submit.value("Login").general
        <a href="${Router.linkTo("registrationPage")}">Registrieren</a>
        <a href="${Router.linkTo("lostPasswordPage")}">Passwort vergessen?</a>
      $Form.end()
    </div>
  </div>
  #parse("sidebar.vm")
</div>
#parse("footer.vm")
